# ========================================
# MAGIC WAND - Environment Variables
# ========================================
# 이 파일을 .env로 복사하고 실제 값을 입력하세요

# ========================================
# Database
# ========================================
# Netlify DB 또는 로컬 Postgres
DATABASE_URL="postgresql://user:password@localhost:5432/magic_wand?schema=public"

# ========================================
# Redis (for Bull Queue & Event Bus)
# ========================================
# Redis Cloud 또는 로컬 Redis
REDIS_URL="redis://localhost:6379"

# ========================================
# GitHub
# ========================================
# Personal Access Token (repo, workflow 권한 필요)
GITHUB_PAT="ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# ========================================
# Upstage API (Document AI / OCR)
# ========================================
# https://upstage.ai/
UPSTAGE_API_KEY="up_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# ========================================
# Netlify
# ========================================
# Personal Access Token
# https://app.netlify.com/user/applications
NETLIFY_AUTH_TOKEN="nfp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# ========================================
# AWS S3 (File Storage)
# ========================================
AWS_ACCESS_KEY_ID="AKIAXXXXXXXXXXXXXXXXX"
AWS_SECRET_ACCESS_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
AWS_REGION="ap-northeast-2"
S3_BUCKET="magic-wand-uploads"

# ========================================
# Slack Bot (Issue Reporting)
# ========================================
# https://api.slack.com/apps
SLACK_SIGNING_SECRET="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
SLACK_BOT_TOKEN="xoxb-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
SLACK_CHANNEL="#magic-wand-issues"

# ========================================
# Application (Backend - Express)
# ========================================
API_PORT="4000"
API_URL="http://localhost:4000"
NODE_ENV="development"

# ========================================
# Application (Frontend - Next.js)
# ========================================
NEXT_PUBLIC_API_URL="http://localhost:4000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ========================================
# Claude Code (CLI Configuration)
# ========================================
# Claude Code를 실행할 EC2 또는 로컬 설정
CLAUDE_CODE_PATH="/usr/local/bin/claude-code"  # 또는 npx
CLAUDE_CODE_SKIP_PERMISSIONS="true"

# ========================================
# Encryption (민감 데이터 암호화)
# ========================================
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# ========================================
# Optional (Development)
# ========================================
# 로그 레벨: debug, info, warn, error
LOG_LEVEL="debug"

# Activity Log 보관 기간 (일)
ACTIVITY_LOG_RETENTION_DAYS="90"

# 최대 Agent 재시도 횟수
MAX_AGENT_RETRIES="5"

# ========================================
# For Production (EC2 Deployment)
# ========================================
# EC2에서 실행할 때만 필요
EC2_INSTANCE_TYPE="t3.medium"
DOCKER_REGISTRY="docker.io"  # 또는 ECR
